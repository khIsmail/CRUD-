                @Html.EditorFor(model => model.NCIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NCIN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NomPers, htmlAttributes: new { @class = "control-label col-md-2" })
